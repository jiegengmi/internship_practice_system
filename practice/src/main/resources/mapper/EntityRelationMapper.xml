<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ikikyou.practice.model.mapper.EntityRelationMapper">

    <insert id="insertUserRoleRelation">
        insert into sys_user_role(user_id, role_id) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.userId},#{item.roleId})
        </foreach>
    </insert>

    <delete id="deleteUserRoleRelation">
        <choose>
            <when test="isUser">
                delete from sys_user_role where user_id=#{id}
            </when>
            <otherwise>
                delete from sys_user_role where role_id=#{id}
            </otherwise>
        </choose>
    </delete>
    <insert id="insertUserPostRelation">
        insert into sys_user_post(user_id, post_id) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.userId},#{item.postId})
        </foreach>
    </insert>

    <delete id="deleteUserPostRelation">
        <choose>
            <when test="isUser">
                delete from sys_user_post where user_id=#{id}
            </when>
            <otherwise>
                delete from sys_user_post where post_id=#{id}
            </otherwise>
        </choose>
    </delete>
    <insert id="insertRoleMenuRelation">
        insert into sys_role_menu(role_id, menu_id) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.roleId},#{item.menuId})
        </foreach>
    </insert>

    <delete id="deleteRoleMenuRelation">
        <choose>
            <when test="isUser">
                delete from sys_role_menu where role_id=#{id}
            </when>
            <otherwise>
                delete from sys_role_menu where menu_id=#{id}
            </otherwise>
        </choose>
    </delete>
</mapper>
